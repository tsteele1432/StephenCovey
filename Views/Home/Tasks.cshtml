@{
    ViewData["Title"] = "Tasks";
}


@model Covey.Models.Task
<h1>Add a Task</h1>

<div>
    <form method="post">
        <div asp-validation-summary="All"></div>
        <label asp-for="TaskName">Task:</label>
        <input asp-for="TaskName" />
        <br />
        <label asp-for="DueDate">Due Date:</label>
        <input asp-for="DueDate" type="date" />
        <br />

        <label asp-for="Quadrant">Quadrant:</label>
        <select asp-for="Quadrant">
            <option value="">Select a Quadrant</option>
            <option value="1">Quadrant 1</option>
            <option value="2">Quadrant 2</option>
            <option value="3">Quadrant 3</option>
            <option value="4">Quadrant 4</option>

        </select>
        <br />
        <label asp-for="Category">Category:</label>
        <select asp-for="Category">
            <option value="">Select a Category</option>
            <option value="home">Home</option>
            <option value="school">School</option>
            <option value="work">Work</option>
            <option value="church">Church</option>

        </select>
        <br />
        <label asp-for="Completed">Task Completed?</label>
        <select asp-for="Completed">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <br />
        <button type="submit">Add Task</button>
    </form>
</div>

